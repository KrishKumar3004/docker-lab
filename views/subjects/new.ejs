    <title>Add New Subject</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@700&display=swap" rel="stylesheet">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="shortcut icon" href="https://img.icons8.com/pastel-glyph/1x/internet.png" type="image/x-icon">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="https://www.svgrepo.com/show/507111/com-mac-old.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            MIS
          </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link " href="/students">Students</a>
            <a class="nav-item nav-link active" href="/subjects">Subjects</a>
          </div>
        </div>
      </nav>
    <div class="container" style="max-width:500px">
        <h1 style="font-family: 'Kanit', sans-serif;margin:25px auto">Add New Subject</h2>
        <form  action="/subjects" method="POST">

            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title">
            </div>

            <div class="form-group">
                <label for="courseId">Course ID</label>
                <input class="form-control" type="text" id="courseId" name="courseId">
            </div>
            
            <button class="btn btn-dark" >Submit</button>
            <a role="button" class="btn btn-danger" style="text-decoration: none; color:white" href="/subjects">Cancel</a>
        </form>
        
    </div>
</body>

</html>